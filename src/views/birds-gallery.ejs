  <body>
    <div class="container">
      <%- include('header.ejs') %>

      <main class="main gal-main" data-name="birds-gallery">
        <!-- BIRDS GALLERY -->
        <section class="tab-content gal-portrait" id="birds-gallery">
          <div class="gallery portrait-gallery">
            <div class="animation-ctrl-div portrait-animation-ctrl-div">
              <button
                type="button"
                class="pause-btn portrait-pause-btn"
                title="Press Enter or Space to Pause Gallery Animation"
              >
                <img
                  class="pause-icon portrait-pause-icon"
                  src="../assets/imgs/pause-button-icon.svg"
                  alt="Press Enter or Space to Pause Gallery Animation"
                />
              </button>

              <button
                type="button"
                class="play-btn portrait-play-btn"
                title="Press Enter or Space to Start Gallery Animation"
              >
                <img
                  class="play-icon portrait-play-icon"
                  src="../assets/imgs/play-button-icon.svg"
                  title="Start Gallery Animation"
                  alt="Press Enter or Space to Start Gallery Animation"
                />
              </button>
            </div>

            <section
              class="slider-box portrait-slider-box"
              tabindex="0"
              role="region"
              aria-roledescription="photo slider"
              aria-label="Birds Gallery"
            >
              <!-- <div class="slider-row-one"></div> -->
              <button type="button" class="back-arrow" data-back-arrow>
                <img
                  data-icon-back
                  class="arrow"
                  src="../assets/imgs/reshot-icon-arrow-chevron-left-975UQXVKZF.svg"
                  alt="Back Arrow"
                />
              </button>

              <div class="photo-box portrait-photo-box">
                <!-- RED WINGED BLACKBIRD -->
                <div
                  class="picture"
                  aria-role="group"
                  aria-roledescription="slide"
                  aria-labelledby="slide1"
                  tabindex="0"
                >
                  <img
                    src="../assets/imgs/birds-gal/Guneratne_2024.06.03_red-wing-vertical-1250p.jpg?size=1250"
                    srcset="../assets/imgs/birds-gal/Guneratne_2024.06.03_red-wing-vertical-1250p.jpg?{sizes: [150,350,550,750,950,1250]}"
                    alt="Slide 1 of 8: A red winged blackbird perched on a vertical reed by the water, about three-quarters up in the center of the frame, facing right. The light blue color of the water provides a backdrop to the bird, and green vegetation forms a vignette around the edges of the frame."
                    id="slide1"
                  />
                </div>

                <!-- EASTERN KINGBIRD IN A TREE -->
                <div
                  class="picture"
                  role="group"
                  aria-roledescription="slide"
                  aria-labelledby="slide2"
                  tabindex="0"
                >
